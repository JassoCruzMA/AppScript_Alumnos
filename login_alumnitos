        <!-- Formulario de Recuperaci√≥n de Contrase√±a -->
        <div id="forgotForm" class="form-container hidden">
            <div class="back-arrow" onclick="showLoginForm()">‚Üê</div>
            <div class="form-title">Recuperar Contrase√±a</div>
            
            <div id="forgotSuccess" class="success-message"></div>
            
            <form>
                <div class="form-group">
                    <label for="forgotEmail">Email</label>
                    <input type="email" id="forgotEmail" name="email" required>
                    <div class="error-message" id="forgotEmailError"></div>
                </div>
                
                <button type="submit" class="btn">Enviar Enlace de Recuperaci√≥n</button>
